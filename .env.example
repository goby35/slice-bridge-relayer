# ========================================
# SLICE BRIDGE SERVICE CONFIGURATION
# ========================================

# Application Configuration
NODE_ENV=development
PORT=8787

# ========================================
# QUEUE CONFIGURATION (BullMQ + Redis)
# ========================================

# Redis connection for BullMQ queues
REDIS_URL=redis://localhost:6380
USE_REDIS=true
QUEUE_PREFIX=slice-bridge

# ========================================
# DATABASE CONFIGURATION
# ========================================

# PostgreSQL connection string
DATABASE_URL=postgresql://username:password@host:port/dbname

# ========================================
# BLOCKCHAIN CONFIGURATION
# ========================================

# Lens Network Configuration
LENS_RPC_HTTP=https://rpc.testnet.lens.xyz
LENS_CHAIN_ID=37111
LENS_START_BLOCK=4000000
LENS_MINTER_ADDRESS=0x... # BridgeMinterLens
LENS_WRAPPED_ADDRESS=0x... # TRYF_Lens

# BSC Network Configuration  
BSC_RPC_HTTP=https://data-seed-prebsc-1-s1.binance.org:8545
BSC_RPC_WS=wss://bsc-ws-node.nariox.org:443
BSC_CHAIN_ID=97
BSC_START_BLOCK=40000000
BSC_POOL_ADDRESS=0x...
BSC_TOKEN_ADDRESS=0x... # TRYF_BSC

# ========================================
# RELAYER CONFIGURATION
# ========================================

# Private key for transaction signing (without 0x prefix)
# IMPORTANT: Keep this secure and never commit to version control
RELAYER_PK=0x... # private key ví nóng Lens (đã có BRIDGE_ROLE)

# ========================================
# OPTIONAL CONFIGURATION
# ========================================

# Logging level (debug, info, warn, error)
LOG_LEVEL=info

# API rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Job processing configuration
MAX_CONCURRENT_JOBS=5
JOB_RETRY_ATTEMPTS=3
JOB_RETRY_BACKOFF_MS=5000

# Health check intervals (milliseconds)
HEALTH_CHECK_INTERVAL=30000
METRICS_COLLECTION_INTERVAL=60000